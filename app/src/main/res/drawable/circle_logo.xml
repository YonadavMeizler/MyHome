<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/outercircle">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#22FF6978" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>

    </item>
    <item
        android:id="@+id/innercircle1"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#44FF6978" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item
        android:id="@+id/innercircle2"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#88FF6978" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item
        android:id="@+id/innercircle3"
        android:bottom="30dp"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#BBFF6978" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item
        android:id="@+id/device_drawing"
        android:bottom="40dp"
        android:drawable="@drawable/ic_devices"
        android:left="40dp"
        android:right="40dp"
        android:top="40dp" />
</layer-list>