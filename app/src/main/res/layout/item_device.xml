<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/DeviceImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="4dp"
        android:background="@drawable/squre_border"
        android:contentDescription="@string/device_image"
        android:padding="4dp"
        android:src="@drawable/ic_lightbulb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DeviceName" />

    <TextView
        android:id="@+id/DeviceClass"
        style="@style/ROBOTO_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/Device_Class"
        app:layout_constraintStart_toEndOf="@+id/DeviceImage"
        app:layout_constraintTop_toBottomOf="@+id/DeviceValue" />

    <TextView
        android:id="@+id/DeviceValue"
        style="@style/ROBOTO_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/Device_Value"
        app:layout_constraintStart_toEndOf="@+id/DeviceImage"
        app:layout_constraintTop_toBottomOf="@+id/DeviceName" />

    <TextView
        android:id="@+id/DeviceName"
        style="@style/ROBOTO_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/Device_Name"
        app:layout_constraintStart_toEndOf="@+id/DeviceImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/DeviceActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>